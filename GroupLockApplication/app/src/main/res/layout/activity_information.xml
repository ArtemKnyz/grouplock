<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorBackGround"
    tools:context="com.example.sonya.grouplockapplication.InformationActivity">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About this program"
        android:id="@+id/textAbout"
        android:textColor="#000000"
        android:layout_marginTop="79dp"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_info_message"
        android:id="@+id/textAbout2"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textAbout"
        android:layout_alignLeft="@+id/textAbout"
        android:layout_alignStart="@+id/textAbout"
        android:layout_alignRight="@+id/textAbout"
        android:layout_alignEnd="@+id/textAbout" />

</RelativeLayout>
